# ============================================
# SWADESHI SOLUTIONS RMS - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!

# ============================================
# SUPABASE CONFIGURATION (Required)
# ============================================
# Get these from your Supabase project settings
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# AI / GEMINI CONFIGURATION (Optional)
# ============================================
# Required for AI chat features
VITE_GEMINI_API_KEY=your-gemini-api-key

# ============================================
# TWILIO WHATSAPP (Optional)
# ============================================
# Required for WhatsApp messaging features
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# ============================================
# IMAGE UPLOAD (Optional)
# ============================================
# Free image hosting service API key
FREEIMAGE_API_KEY=your-freeimage-api-key

# ============================================
# GOOGLE DRIVE BACKUP (Optional)
# ============================================
# For automated backup to Google Drive
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# APPLICATION SETTINGS
# ============================================
# App environment (development, staging, production)
VITE_APP_ENV=development

# Enable debug mode (true/false)
VITE_DEBUG=false

# API base URL (if different from Supabase)
# VITE_API_URL=https://api.example.com
