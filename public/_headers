# Cache static assets with hashes in their names for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache other static files for 1 week
/*.js
  Cache-Control: public, max-age=604800

/*.css
  Cache-Control: public, max-age=604800

/*.ico
  Cache-Control: public, max-age=604800

/*.png
  Cache-Control: public, max-age=604800

/*.jpg
  Cache-Control: public, max-age=604800

/*.svg
  Cache-Control: public, max-age=604800

# Don't cache HTML files (they might change with deployments)
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Root HTML should not be cached
/index.html
  Cache-Control: public, max-age=0, must-revalidate

# PWA Manifest
/manifest.json
  Content-Type: application/manifest+json
  Cache-Control: public, max-age=0, must-revalidate

# Digital Asset Links for TWA
/.well-known/*
  Content-Type: application/json
  Access-Control-Allow-Origin: *
  Cache-Control: public, max-age=0, must-revalidate
